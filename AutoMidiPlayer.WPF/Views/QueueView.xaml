<UserControl
    x:Class="AutoMidiPlayer.WPF.Views.QueueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:modern="http://schemas.modernwpf.com/2019"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:viewModels="clr-namespace:AutoMidiPlayer.WPF.ViewModels"
    xmlns:midi="clr-namespace:AutoMidiPlayer.Data.Midi;assembly=AutoMidiPlayer.Data"
    xmlns:modernWpf="clr-namespace:AutoMidiPlayer.WPF.ModernWPF"
    d:DataContext="{d:DesignInstance Type=viewModels:QueueViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Search and Actions -->
        <Grid Grid.Row="0"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <modern:SimpleStackPanel Grid.Column="0"
                                     Orientation="Horizontal"
                                     Spacing="4">
                <ui:TextBox PlaceholderText="Filter queue..."
                            Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                            Width="250"
                            VerticalAlignment="Center"/>
                <TextBlock Margin="10,0"
                           VerticalAlignment="Center"
                           Opacity="0.7"
                           Style="{DynamicResource BodyTextBlockStyle}">
                    <Run Text="{Binding Tracks.Count, Mode=OneWay}"/> in queue
                </TextBlock>
            </modern:SimpleStackPanel>

            <modern:SimpleStackPanel Grid.Column="1"
                                     Orientation="Horizontal"
                                     Spacing="4">
                <Button Command="{s:Action RemoveTrack}"
                        Content="Remove"
                        ToolTip="Remove selected from queue"/>
                <Button Command="{s:Action ClearQueue}"
                        Content="Clear Queue"/>
            </modern:SimpleStackPanel>
        </Grid>

        <!-- Column Headers (Spotify-style) -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,8"
                Margin="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"
                                      MinWidth="150"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="#"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="1"
                           Text="Title"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="2"
                           Text="Album"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="3"
                           Text="Key"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="4"
                           Text="BPM"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="5"
                           Text="Transpose"
                           Opacity="0.6"
                           FontSize="12"/>
                <TextBlock Grid.Column="6"
                           Text="Date Added"
                           Opacity="0.6"
                           FontSize="12"/>
                <ui:FontIcon Grid.Column="7"
                             Glyph="&#xE916;"
                             FontFamily="{StaticResource MdlFontFamily}"
                             FontSize="12"
                             HorizontalAlignment="Right"
                             Opacity="0.6"
                             ToolTip="Duration"/>
            </Grid>
        </Border>

        <!-- Queue List (Spotify-style rows) with drag-drop reordering -->
        <ListView x:Name="QueueListView"
                  Grid.Row="2"
                  Margin="0,0,0,5"
                  ItemsSource="{Binding FilteredTracks}"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  MouseDoubleClick="{s:Action OnFileChanged}"
                  SelectedItem="{Binding SelectedFile}"
                  BorderThickness="0"
                  Background="Transparent"
                  AllowDrop="True">
            <ListView.ItemTemplate>
                <DataTemplate DataType="midi:MidiFile">
                    <Grid Margin="0,2"
                          x:Name="RowGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"
                                              MinWidth="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <!-- # Position / Play Button on hover -->
                        <Grid Grid.Column="0">
                            <TextBlock x:Name="PositionText"
                                       Text="{Binding Position}"
                                       VerticalAlignment="Center"
                                       Opacity="0.6">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{x:Static modernWpf:IsPlayingToBoolConverter.Instance}">
                                                        <Binding/>
                                                        <Binding Path="DataContext.OpenedFile"
                                                                 RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                <Setter Property="Opacity"
                                                        Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button x:Name="PlayButton"
                                    Visibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Command="{s:Action PlayFromQueue}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Play">
                                <ui:FontIcon Glyph="&#xF5B0;"
                                             FontFamily="{StaticResource MdlFontFamily}"
                                             FontSize="14"/>
                            </Button>
                        </Grid>

                        <!-- Title + Author (Spotify-style stacked) -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock"
                                           BasedOn="{StaticResource BodyTextBlockStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{x:Static modernWpf:IsPlayingToBoolConverter.Instance}">
                                                        <Binding/>
                                                        <Binding Path="DataContext.OpenedFile"
                                                                 RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Song.Author}"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="12"
                                       Opacity="0.6"
                                       Visibility="{Binding Song.Author, Converter={x:Static s:BoolToVisibilityConverter.Instance}}"/>
                        </StackPanel>

                        <!-- Album -->
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Song.Album}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Opacity="0.7"/>

                        <!-- Key -->
                        <TextBlock Grid.Column="3"
                                   Text="{Binding Song.Key, Converter={x:Static modernWpf:KeyToNoteConverter.Instance}}"
                                   VerticalAlignment="Center"
                                   Opacity="0.7"/>

                        <!-- BPM -->
                        <TextBlock Grid.Column="4"
                                   Text="{Binding EffectiveBpm, StringFormat={}{0:F0}}"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"/>

                        <!-- Transpose -->
                        <TextBlock Grid.Column="5"
                                   Text="{Binding Song.Transpose, Converter={x:Static modernWpf:TransposeToDisplayConverter.Instance}}"
                                   ToolTip="{Binding Song.Transpose, Converter={x:Static modernWpf:TransposeToTooltipConverter.Instance}}"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"/>

                        <!-- Date Added -->
                        <TextBlock Grid.Column="6"
                                   Text="{Binding Song.DateAdded, StringFormat={}{0:MMM d, yyyy}}"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"/>

                        <!-- Duration -->
                        <TextBlock Grid.Column="7"
                                   Text="{Binding Duration, StringFormat=m\\:ss}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Opacity="0.6"/>
                    </Grid>
                    <DataTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="PositionText"
                                    Property="Visibility"
                                    Value="Hidden"/>
                            <Setter TargetName="PlayButton"
                                    Property="Visibility"
                                    Value="Visible"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem"
                       BasedOn="{StaticResource DefaultListViewItemStyle}">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                    <Setter Property="Padding"
                            Value="12,2"/>
                    <Setter Property="MinHeight"
                            Value="36"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Bottom Controls -->
        <Border Grid.Row="3"
                Margin="0,5"
                Padding="8"
                CornerRadius="4"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current song info -->
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Opacity="0.8"
                           Margin="10,0">
                    Now playing: <Run Text="{Binding OpenedFile.Title, Mode=OneWay, FallbackValue='Nothing'}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
