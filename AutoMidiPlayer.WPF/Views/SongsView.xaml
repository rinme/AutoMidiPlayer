<UserControl
    x:Class="AutoMidiPlayer.WPF.Views.SongsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:viewModels="clr-namespace:AutoMidiPlayer.WPF.ViewModels"
    xmlns:controls="clr-namespace:AutoMidiPlayer.WPF.Controls"
    xmlns:converters="clr-namespace:AutoMidiPlayer.WPF.Converters"
    d:DataContext="{d:DesignInstance Type=viewModels:SongsViewModel}">

    <UserControl.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Search and Sort -->
        <Grid Grid.Row="0"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box with Add Button -->
            <controls:SimpleStackPanel Grid.Column="0"
                                       Orientation="Horizontal"
                                       Spacing="4">
                <ui:TextBox PlaceholderText="Search songs..."
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Width="250"
                            Icon="Search12"
                            VerticalAlignment="Center"/>
                <Button Command="{s:Action OpenFile}"
                        Background="Transparent"
                        Padding="8"
                        ToolTip="Import MIDI files">
                    <Path Data="{StaticResource AddIconGeometry}"
                          Fill="{DynamicResource TextFillColorPrimaryBrush}"
                          Stretch="Uniform"
                          Width="16"
                            Height="16"/>
                </Button>
                <Button Command="{s:Action ShowMissingFilesDialog}"
                        Background="Transparent"
                        Padding="8"
                        ToolTip="Missing files detected"
                        Visibility="{Binding HasMissingSongs, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
                    <ui:FontIcon Glyph="&#xE7BA;"
                                 FontFamily="{StaticResource MdlFontFamily}"
                                 FontSize="16"
                                 Foreground="#FFB900"/>
                </Button>
                <TextBlock Margin="10,0"
                           VerticalAlignment="Center"
                           Opacity="0.7">
                    <Run Text="{Binding Tracks.Count, Mode=OneWay}"/> songs
                </TextBlock>
            </controls:SimpleStackPanel>

            <!-- Sort Controls -->
            <controls:SimpleStackPanel Grid.Column="1"
                                       Orientation="Horizontal"
                                       Spacing="8">
                <!-- Sort Dropdown -->
                <ComboBox Width="150"
                          SelectedIndex="{Binding SortModeIndex, Mode=TwoWay}"
                          ToolTip="Sort by">
                    <ComboBoxItem Content="Custom order"/>
                    <ComboBoxItem Content="Title"/>
                    <ComboBoxItem Content="Recently added"/>
                    <ComboBoxItem Content="Duration"/>
                </ComboBox>

                <!-- Sort Direction Toggle -->
                <Button Command="{s:Action ToggleSortDirection}"
                        Background="Transparent"
                        Padding="8,6"
                        ToolTip="Toggle sort direction">
                    <ui:FontIcon Glyph="{Binding SortDirectionIcon}"
                                 FontFamily="{StaticResource MdlFontFamily}"
                                 FontSize="12"/>
                </Button>
            </controls:SimpleStackPanel>
        </Grid>

        <!-- Track List -->
        <controls:TrackListControl x:Name="TrackList"
                                    Grid.Row="1"
                                    ItemsSource="{Binding SortedTracks}"
                                    SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                                    OpenedFile="{Binding QueueView.OpenedFile}"
                                    IsPlaying="{Binding Playback.IsPlaying}"
                                    AllowReorder="True"
                                    ItemDoubleClick="TrackList_ItemDoubleClick"
                                    PlayPauseClick="TrackList_PlayPauseClick"
                                    MenuClick="TrackList_MenuClick">
            <controls:TrackListControl.ItemContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add to Queue"
                              Click="AddToQueue_Click">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource AddQueueIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Edit"
                              Click="EditSong_Click"
                              Visibility="{Binding PlacementTarget.IsMultiSelect, RelativeSource={RelativeSource AncestorType=ContextMenu}, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource EditIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Delete"
                              Click="DeleteSong_Click">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource DeleteIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </controls:TrackListControl.ItemContextMenu>
        </controls:TrackListControl>
    </Grid>
</UserControl>
