<UserControl x:Class="AutoMidiPlayer.WPF.ModernWPF.EqualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="16"
             Height="16">
        <Grid x:Name="BarsGrid">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="Bar1"
                           Grid.Column="0"
                           Width="3"
                           Height="4"
                           Fill="{DynamicResource SystemControlHighlightAccentBrush}"
                           VerticalAlignment="Bottom"
                           Margin="0,0,1,0"/>
                <Rectangle x:Name="Bar2"
                           Grid.Column="1"
                           Width="3"
                           Height="8"
                           Fill="{DynamicResource SystemControlHighlightAccentBrush}"
                           VerticalAlignment="Bottom"
                           Margin="0,0,1,0"/>
                <Rectangle x:Name="Bar3"
                           Grid.Column="2"
                           Width="3"
                           Height="6"
                           Fill="{DynamicResource SystemControlHighlightAccentBrush}"
                           VerticalAlignment="Bottom"
                           Margin="0,0,1,0"/>
                <Rectangle x:Name="Bar4"
                           Grid.Column="3"
                           Width="3"
                           Height="10"
                           Fill="{DynamicResource SystemControlHighlightAccentBrush}"
                           VerticalAlignment="Bottom"/>
        </Grid>
</UserControl>
